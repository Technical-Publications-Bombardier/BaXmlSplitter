@using MauiXmlSplitter.Models
@inject XmlSplitterViewModel ViewModel

<Grid AllowFiltering="false" AllowPaging="true" AllowSelection="true" AllowSorting="true" Class="table table-hover table-bordered" DataProvider="ViewModel.GridDataUowStatesProviderAsync" SelectedItemsChanged="ViewModel.OnSelectedUowStatesChanged" PageSize="5" Responsive="true" SelectionMode="GridSelectionMode.Multiple" TItem="UowState">

    <GridColumn TItem="UowState" HeaderText="Id" PropertyName="StateValue"
                SortKeySelector="item => item.StateValue ?? 0">
        @context.StateValue
    </GridColumn>
    <GridColumn TItem="UowState" HeaderText="State Name" PropertyName="StateName"
                SortKeySelector="item => item.StateName ?? string.Empty">
        @context.StateName
    </GridColumn>
    <GridColumn TItem="UowState" HeaderText="Remarks" PropertyName="Remark"
                SortKeySelector="item => item.Remark ?? string.Empty">
        @context.Remark
    </GridColumn>
</Grid>