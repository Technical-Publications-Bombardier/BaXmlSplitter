@using MauiXmlSplitter.Resources
@inject IJSRuntime JSRuntime
@inherits LayoutComponentBase

<div class="bb-page">

    <Sidebar @ref="sidebar"
             Title="@string.Empty"
             ImageSrc="img/BBD_Logo_White.svg"
             ElementId="bbdlogo"
             DataProvider="SidebarDataProvider"/>

    <main>
        <div class="bb-top-row px-4 d-flex justify-content-between">
            <Icon Name="IconName.List" role="button" @onclick="ToggleSidebar" />
            <NavLink href="about">@AppResources.About</NavLink>
        </div>

        <article class="content px-4">
            <div class="py-2">
                @Body
            </div>
        </article>
    </main>
</div>

<Modal IsServiceModal="true"/>

@code {
    private Sidebar? sidebar;
    private IEnumerable<NavItem>? navItems;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        navItems ??= GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new() { Id = "1", Href = "/", IconName = IconName.SignpostSplit, Text = @AppResources.SplitManual, Match = NavLinkMatch.All },
            new() { Id = "2", Href = "/settings", IconName = IconName.Gear, Text = @AppResources.Settings }
        };

        return navItems;
    }

    private async Task ToggleSidebar()
    {
        await JSRuntime.InvokeVoidAsync("updateLogo");
        sidebar?.ToggleSidebar();
    }

}