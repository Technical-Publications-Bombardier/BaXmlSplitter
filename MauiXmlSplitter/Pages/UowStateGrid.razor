@inject XmlSplitterViewModel ViewModel

<Grid TItem="Models.UowState"
                  Class="table table-hover table-bordered"
                  DataProvider="ViewModel.GridDataUowStatesProviderAsync"
                  AllowFiltering="true"
                  AllowPaging="true"
                  PageSize="5"
                  AllowSorting="true"
                  Responsive="true">

                <GridColumn TItem="Models.UowState" HeaderText="Id" PropertyName="StateValue" SortKeySelector="item => item.StateValue ?? 0">
        @context.StateValue
                </GridColumn>
                <GridColumn TItem="Models.UowState" HeaderText="State Name" PropertyName="StateName" SortKeySelector="item => item.StateName ?? string.Empty">
        @context.StateName
                </GridColumn>
                <GridColumn TItem="Models.UowState" HeaderText="Remarks" PropertyName="Remark" SortKeySelector="item => item.Remark ?? string.Empty">
        @context.Remark
                </GridColumn>
                <GridColumn TItem="Models.UowState" PropertyName="IsSelected" Filterable="false" Sortable="false">
                    <HeaderContent>
                        <Switch @bind-Value="ViewModel.IsAllCheckedUowStates"/>
                    </HeaderContent>
                    <ChildContent>
                        <Switch @bind-Value="@context.IsSelected"/>
                    </ChildContent>
                </GridColumn>
            </Grid>