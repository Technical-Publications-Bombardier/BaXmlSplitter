@using MauiXmlSplitter.Models
@inject XmlSplitterViewModel ViewModel

<Grid TItem="UowState" Class="table table-hover table-bordered"
      DataProvider="ViewModel.GridDataUowStatesProviderAsync" AllowFiltering="true" AllowPaging="true" PageSize="5"
      AllowSorting="true" Responsive="true">

    <GridColumn TItem="UowState" HeaderText="Id" PropertyName="StateValue"
                SortKeySelector="item => item.StateValue ?? 0">
        @context.StateValue
    </GridColumn>
    <GridColumn TItem="UowState" HeaderText="State Name" PropertyName="StateName"
                SortKeySelector="item => item.StateName ?? string.Empty">
        @context.StateName
    </GridColumn>
    <GridColumn TItem="UowState" HeaderText="Remarks" PropertyName="Remark"
                SortKeySelector="item => item.Remark ?? string.Empty">
        @context.Remark
    </GridColumn>
    <GridColumn TItem="UowState" PropertyName="IsSelected" Filterable="false" Sortable="false">
        <HeaderContent>
            <Switch @bind-Value="ViewModel.IsAllCheckedUowStates"/>
        </HeaderContent>
        <ChildContent>
            <Switch @bind-Value="@context.IsSelected"/>
        </ChildContent>
    </GridColumn>
</Grid>